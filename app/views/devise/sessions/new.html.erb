<div class="text-xs-center" style="padding:50px 0;text-align: center;">
	<div class="logo">login</div>

  <div class="login-form-1">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form", class: "text-left"}) do |f| %>

      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">

          <div class="form-group">
            <%= f.email_field :email, autofocus: true,  class: "form-control", id: "reg_email", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off" ,  class: "form-control", id: "lg_password", placeholder: "Password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group login-group-checkbox">
              <%= f.check_box :remember_me, id: "lg_remember" %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        </div>


        <%= button_tag(type: 'submit', class: "login-button") do %>
          <i class="fa fa-chevron-right"></i>
        <% end %>
    </div>
  <% end %>


  <%= render "devise/shared/links" %>
</div>
</div>
