<!DOCTYPE html>
<html>
  <head>
    <title>TastyFood</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

<table>
  <tr>
    <th>
      <%= link_to "Sign Up Admin", new_admin_registration_path %>

      <% if admin_signed_in? %>
        <%= link_to('Logout Admin', destroy_admin_session_path, :method => :delete) %>

      <% else %>
        <%= link_to('Login Admin', new_admin_session_path)  %>

      <% end %>
    </th>
    <th>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    </th>
    <th>
      <%= link_to "Sign Up User", new_user_registration_path %>

      <% if user_signed_in? %>
        <%= link_to('Logout User', destroy_user_session_path, :method => :delete) %>

      <% else %>
        <%= link_to('Login User', new_user_session_path)  %>

      <% end %>
    </th>
  </tr>
</table>

    <%= yield %>
  </body>
</html>
